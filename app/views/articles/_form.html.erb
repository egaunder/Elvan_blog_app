<%= render 'shared/error', obj: @article %>
<div class="row">
  <div class="col-xs-12 col-xs-offset-1">
    <%= form_for @article do |f| %>

     <fieldset class="form-group col-xs-10">
       <%= f.label :title %> 
       <%= f.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
     </fieldset>

     <fieldset class="form-group col-xs-10">
      <%= f.label :description %> 
      <%= f.text_area :description, class: "form-control", placeholder: "Article description", autofocus: true %>
     </fieldset>

     <fieldset class="form-group col-xs-10">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <%= cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
        <% end %>  
     </fieldset>

     <fieldset class="form-group col-xs-10">
      <%= f.submit class: "btn btn-primary" %> <br><br>
      <%= link_to "Back to article listing", articles_path %>      
     </fieldset>

    <% end %>

  </div>
</div>



